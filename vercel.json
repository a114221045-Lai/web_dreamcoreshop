{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "API_KEY": "@api-key",
    "OPENROUTER_API_KEY": "@openrouter-api-key",
    "OPENROUTER_MODEL": "google/gemma-3-27b-it:free",
    "PORT": "3000"
  }
}
